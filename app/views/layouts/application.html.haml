%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ 'http-equiv' => 'X-UA-Compatible', content: "IE=edge,chrome=1" }
    %meta{ name: :viewport, content: "width=device-width, initial-scale=1.0" }
    %title #RubyOnSails - Tweets!
    = stylesheet_link_tag :application
    = auto_discovery_link_tag :atom, tweets_url(format: :atom), title: "#RubyOnSails"
    = csrf_meta_tag
  %body
    %header#site_header
      %div.container
        = link_to "REGISTER", "http://rubyonsails-ww.eventbrite.com", class: "button"
        %h1.logo
          = image_tag asset_path("logo.png"), alt: "Ruby On Sails Logo"
    #wrapper
      %header#page_header
        %nav
          %ul
            %li=link_to "Home", root_path
            %li=link_to "Register", ""
            %li=link_to "#RubyOnSails", tweets_url
        %h1= link_to "#RubyOnSails", root_path
        .feed
          = link_to image_tag('twitter_icon_grey.png'), twitter_url
          = link_to image_tag('feed_icon_grey.png'), tweets_url(format: :atom)
      %section#main{ role: :main }
        = yield
      %section#sponsors
        = render "layouts/sponsors"
    = javascript_include_tag :application
    = yield :javascripts
    = render 'shared/ga'
